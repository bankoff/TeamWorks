<Page
    x:Class="SpaceAcademy.Pages.QuestionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpaceAcademy.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../Images/space-cool.jpg" />
        </Grid.Background>

        <ListView x:Name="QuestionList" Grid.Row="1" Margin="20">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="10">
                        <TextBlock Text="{Binding Question}"
                                   Style="{StaticResource SubheaderTextBlockStyle}"/>
                        <Button Margin="0,50,0,0" Background="Gold" HorizontalAlignment="Center">
                            <TextBlock x:ConnectionId='3' Text="{Binding AnswerOne}"
                                       Style="{StaticResource SubheaderTextBlockStyle}"
                                                                       
                                       Height="80"
                                       Width="300"/>
                        </Button>
                        <Button Margin="0,50,0,0" Background="Gold" HorizontalAlignment="Center">
                            <TextBlock x:ConnectionId='2' Text="{Binding AnswerTwo}"
                                       Style="{StaticResource SubheaderTextBlockStyle}"
                                                                       
                                       Height="80"
                                       Width="300"/>
                        </Button>
                        <Button Margin="0,50,0,0" Background="Gold" HorizontalAlignment="Center">
                            <TextBlock x:ConnectionId='1' Text="{Binding AnswerThree}"
                                       Style="{StaticResource SubheaderTextBlockStyle}"
                                                                         
                                       Height="80"
                                       Width="300"/>
                        </Button>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </Grid>
</Page>

